<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>

<div class="col-md-8">
<% if @microposts.any? %>
<h3><%= t(:courses) %> (<%= @courses.count %>)</h3>
  <ol class="courses">
  <%= render @courses %>
  </ol>
  <%= will_paginate @courses%>
  <% end %>
</div>
