<% provide(:title, t(:home)) %>

<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="course_form">
        <%= render "shared/course_form" %>
      </section>
      <div class="col-md-8">
        <h3><%= t(:course_feed)%></h3>
        <%= render "shared/feed" %>
      </div>
    </aside>
  </div>
<% else %>
  <div class="center jumbotron">
  <h1><%= t(:course_registration) %></h1>
  <p>
    Hello and welcome. This is the home page for the course registration system.
  </p>
  <%= link_to t(:sign_up_now), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
